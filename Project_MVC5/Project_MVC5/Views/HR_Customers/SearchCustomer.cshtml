@model Project_MVC5.Models.Customers
@using PagedList.Mvc;

@{
    /////////////////////////////////////////
    //////////////////////////////////////// Check delete
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_HRLayout.cshtml";

}


<section class="content">
    <div class="box box-info">


        <div class="box-body">

            <form class="form-horizontal" action="/HR_Customer/SearchCustomer/" method="post">

                <div class="form-horizontal form-control-static">

                    <div class="form-group-sm form-inline form-control-static">
                        <label class="control-label col-md-push-12">Customer Name</label>&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="text" class="form-control col-md-push-12 bg-gray-light" name="CUSTOMER_NAME" id="CUSTOMER_NAME" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                </div>
                <div class="form-horizontal">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input name="SearchButton" type="submit" value="Search" class="btn btn-primary text-center" />
                </div>
            </form>
        </div>
    </div>

    <br /><br /><br />

    <div class="box box-warning">

        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tr>

                    <th>Customer Name</th>
                    <th>Address</th>
                    <th>Telephone</th>
                    <th>Credit Limit</th>

                </tr>
                <tbody>

                    @if (Model.SearchResults != null)
                    {
                        foreach (var item in Model.SearchResults)
                        {
                            <tr class="main-data">

                                <td>@item.CUSTOMER_NAME</td>
                                <td>@item.ADDRESS</td>
                                <td>@item.Telephone</td>
                                <td>@item.CreditLimit</td>

                            </tr>
                        }
                    }




                </tbody>

            </table>
        </div>
    </div>
</section>




