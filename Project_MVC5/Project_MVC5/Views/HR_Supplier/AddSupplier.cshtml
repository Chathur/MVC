@model Project_MVC5.Models.tb_Supplier
@using PagedList.Mvc;

@{
    ViewBag.Title = "Add Suppliers";
    Layout = "~/Views/Shared/_SalesLayout.cshtml";
}

@* add new & edit*@
<form class="form-horizontal" action="/HR_Supplier/AddorEdit" method="post">

    <div class="form-group">
        <label class="control-label col-sm-4">Supplier name</label>
        <input type="text" class="form-control col-sm-6" name="Name_Supplier" id="Name_Supplier" />
        <input type="hidden" name="ID_Supplier" id="ID_Supplier" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Store</label>
        <input type="text" class="form-control col-sm-6" name="Store_Supplier" id="Store_Supplier" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Address</label>
        <input type="text" class="form-control col-sm-6" name="Address_Supplier" id="Address_Supplier" />
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Telephone</label>
        <input type="text" class="form-control col-sm-6" name="Tel_Supplier" id="Tel_Supplier" />
    </div>
    <input type="submit" value="SAVE" class="btn btn-danger text-center" />
</form>

<table class="table">
    <tr>
        <th>Customer name</th>
        <th>Store</th>
        <th>Address</th>
        <th>Telephone</th>
        <th>Option</th>
    </tr>
    <tbody>
        @if (Model.SearchResults != null)
        {
            foreach (var item in Model.SearchResults)
            {
                <tr class="main-data" data-id="@item.ID_Supplier">
                    <td>@item.Name_Supplier</td>
                    <td>@item.Store_Supplier</td>
                    <td>@item.Address_Supplier</td>
                    <td>@item.Tel_Supplier</td>
                    <td>
                        <a href="/Sales_Customer/Delete/@item.ID_Supplier">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>